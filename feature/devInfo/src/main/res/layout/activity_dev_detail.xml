            android:layout_marginTop="5dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/stack_background"
            android:fontFamily="@font/pretendardmedium"
            android:gravity="center"
            android:padding="5dp"
            android:text="JAVA"
            android:textColor="@color/olive_black"
