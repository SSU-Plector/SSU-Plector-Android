<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="10dp"
    android:background="@drawable/projects_background_olive">

    <ImageView
        android:id="@+id/iv_project_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="30dp"
        android:layout_marginStart="20dp"
        android:src="@drawable/project_profile_default"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_project_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/pretendardextrabold"
        android:textColor="@color/olive_black"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@id/tv_project_description"
        app:layout_constraintStart_toEndOf="@id/iv_project_profile"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Project Name" />

    <TextView
        android:id="@+id/tv_project_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="30dp"
        android:fontFamily="@font/pretendardmedium"
        android:textColor="@color/olive_black"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/iv_project_profile"
        app:layout_constraintTop_toBottomOf="@id/tv_project_name"
        tools:text="Project Description" />

    <TextView
        android:id="@+id/tv_navigate_to_project"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:fontFamily="@font/pretendardblack"
        android:textColor="@color/gray2"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@id/tv_project_name"
        app:layout_constraintStart_toEndOf="@id/tv_project_name"
        android:text="@string/tv_navigate_to_project" />

    <TextView
        android:id="@+id/tv_sorted_project"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="5dp"
        android:fontFamily="@font/pretendardbold"
        android:textColor="@color/olive_black"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="서비스" />
</androidx.constraintlayout.widget.ConstraintLayout>