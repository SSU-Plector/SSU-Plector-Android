<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/ai_designer_image_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/pretendardbold"
        android:gravity="start"
        android:text="@string/ai_designer_image_title"
        android:textColor="@color/olive_black"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/ai_designer_branding_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="15dp"
        android:fontFamily="@font/pretendardregular"
        android:gravity="start"
        android:text="@string/ai_designer_image_description"
        android:textColor="@color/gray2"
        android:textSize="13sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ai_designer_image_title" />

    <EditText
        android:id="@+id/et_image_description"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginHorizontal="15dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/projects_background_olive"
        android:gravity="start"
        android:hint="@string/et_image_description_hint"
        android:padding="10dp"
        android:textColor="@color/olive_black"
        android:textSize="13sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ai_designer_branding_description" />

    <TextView
        android:id="@+id/btn_submit_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="30dp"
        android:fontFamily="@font/pretendardbold"
        android:gravity="center"
        android:text="@string/btn_submit_image"
        android:paddingEnd="30dp"
        android:paddingStart="15dp"
        android:paddingVertical="10dp"
        android:textAlignment="center"
        android:textColor="@color/main_olive"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_image_description" />

    <TextView
        android:id="@+id/ai_designer_image_result_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/pretendardbold"
        android:gravity="start"
        android:text="@string/ai_designer_image_result_title"
        android:textColor="@color/olive_black"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_submit_image" />

    <ImageView
        android:id="@+id/iv_ai_designer_image_result"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginHorizontal="15dp"
        android:layout_marginVertical="15dp"
        android:layout_marginStart="15dp"
        app:layout_constraintBottom_toTopOf="@+id/tv_file_download"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ai_designer_image_result_title"
        tools:src="@drawable/back_button_24" />

    <ProgressBar
        android:id="@+id/loading_progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ai_designer_image_result_title" />

    <ImageView
        android:id="@+id/tv_file_download"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/pretendardregular"
        android:gravity="start"
        android:layout_marginHorizontal="10dp"
        android:src="@drawable/file_download_24"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/ai_designer_image_result_title"
        app:layout_constraintStart_toEndOf="@+id/ai_designer_image_result_title"
        app:layout_constraintTop_toTopOf="@+id/ai_designer_image_result_title" />

</androidx.constraintlayout.widget.ConstraintLayout>