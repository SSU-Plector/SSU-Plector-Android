<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/projects_background_olive">

    <ImageView
        android:id="@+id/iv_project_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="30dp"
        android:layout_marginStart="20dp"
        android:background="@drawable/project_profile_default"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_project_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:fontFamily="@font/pretendardextrabold"
        tools:text="Project Name"
        android:textColor="@color/olive_black"
        android:textSize="16sp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toTopOf="@id/tv_project_description"
        app:layout_constraintStart_toEndOf="@id/iv_project_profile"
        app:layout_constraintTop_toTopOf="@id/iv_project_profile" />

    <TextView
        android:id="@+id/tv_project_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="3dp"
        android:fontFamily="@font/pretendardmedium"
        tools:text="Project Description"
        android:textColor="@color/olive_black"
        android:textSize="12sp"
        app:layout_constraintStart_toEndOf="@id/iv_project_profile"
        app:layout_constraintTop_toBottomOf="@id/tv_project_name" />

    <TextView
        android:id="@+id/tv_project_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:fontFamily="@font/pretendardblack"
        tools:text="서비스"
        android:textColor="@color/gray2"
        android:textSize="12sp"
        app:layout_constraintStart_toEndOf="@id/tv_project_name"
        app:layout_constraintBottom_toBottomOf="@id/tv_project_name" />


    <TextView
        android:id="@+id/tv_project_clicked"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/pretendardmedium"
        android:text="@string/tv_project_clicked"
        android:textColor="@color/olive_black"
        android:textSize="12sp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>