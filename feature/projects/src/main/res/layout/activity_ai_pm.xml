<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="com.zucchini.ai_members.pm.AiPmActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_top_app_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/top_app_bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/pretendardextrabold"
                android:gravity="center"
                android:paddingVertical="20dp"
                android:text="@string/ai_pm"
                android:textColor="@color/dark_olive"
                android:textSize="20sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <!--
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cl_top_app_bar"
            android:src="@drawable/ai_pm"
            android:layout_marginStart="15dp"
            android:layout_marginTop="15dp"
            />
        -->

        <TextView
            android:id="@+id/ai_pm_summary_meeting_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/pretendardbold"
            android:gravity="start"
            android:text="@string/ai_pm_summary_meeting_title"
            android:textColor="@color/olive_black"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cl_top_app_bar" />

        <TextView
            android:id="@+id/ai_pm_summary_meeting_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="15dp"
            android:fontFamily="@font/pretendardregular"
            android:gravity="start"
            android:text="@string/ai_pm_summary_meeting_description"
            android:textColor="@color/olive_black"
            android:textSize="13sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ai_pm_summary_meeting_title" />

        <ImageView
            android:id="@+id/iv_file_upload"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="50dp"
            android:layout_marginTop="15dp"
            android:src="@drawable/file_upload_icon_24"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ai_pm_summary_meeting_description" />

        <TextView
            android:id="@+id/tv_file_upload"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/pretendardregular"
            android:gravity="center"
            android:text="@string/tv_file_upload"
            android:textColor="@color/olive_black"
            android:textSize="15sp"
            app:layout_constraintEnd_toEndOf="@+id/iv_file_upload"
            app:layout_constraintStart_toStartOf="@+id/iv_file_upload"
            app:layout_constraintTop_toBottomOf="@+id/iv_file_upload" />

        <TextView
            android:id="@+id/iv_meeting_result"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:background="@drawable/submit_button_background"
            android:fontFamily="@font/pretendardsemibold"
            android:gravity="center"
            android:text="@string/iv_meeting_result"
            android:textColor="@color/olive_light_gray"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="@+id/tv_file_upload"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/iv_file_upload"
            app:layout_constraintTop_toTopOf="@+id/iv_file_upload" />

        <View
            android:id="@+id/divider1"
            android:layout_width="wrap_content"
            android:layout_height="2dp"
            android:layout_marginTop="40dp"
            android:background="@color/gray2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_file_upload" />

        <TextView
            android:id="@+id/ai_pm_meeting_progress_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/pretendardbold"
            android:gravity="start"
            android:text="@string/ai_pm_meeting_progress_title"
            android:textColor="@color/olive_black"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/divider1" />

        <TextView
            android:id="@+id/ai_pm_meeting_progress_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="15dp"
            android:fontFamily="@font/pretendardregular"
            android:gravity="start"
            android:text="@string/ai_pm_meeting_progress_description"
            android:textColor="@color/olive_black"
            android:textSize="13sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ai_pm_meeting_progress_title" />

        <TextView
            android:id="@+id/ai_pm_meeting_progress_select_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="15dp"
            android:fontFamily="@font/pretendardregular"
            android:gravity="start"
            android:text=""
            android:textColor="@color/olive_black"
            android:textSize="13sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ai_pm_meeting_progress_description" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
