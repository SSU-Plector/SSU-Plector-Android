<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_ai_designer"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/ai_designer"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/ai_designer_branding_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:fontFamily="@font/pretendardbold"
            android:gravity="start"
            android:text="@string/ai_designer_branding_title"
            android:textColor="@color/olive_black"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="@+id/iv_ai_designer"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/iv_ai_designer"
            app:layout_constraintTop_toTopOf="@+id/iv_ai_designer" />

        <TextView
            android:id="@+id/ai_designer_branding_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="15dp"
            android:fontFamily="@font/pretendardregular"
            android:gravity="start"
            android:text="@string/ai_designer_branding_description"
            android:textColor="@color/gray2"
            android:textSize="13sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ai_designer_branding_title" />

        <EditText
            android:id="@+id/et_branding_description"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginHorizontal="15dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/projects_background_olive"
            android:gravity="start"
            android:hint="@string/et_branding_description_hint"
            android:padding="10dp"
            android:textColor="@color/olive_black"
            android:textColorHint="@color/gray2"
            android:textSize="13sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ai_designer_branding_description" />

        <TextView
            android:id="@+id/btn_submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="30dp"
            android:fontFamily="@font/pretendardbold"
            android:gravity="center"
            android:paddingVertical="10dp"
            android:paddingStart="15dp"
            android:paddingEnd="30dp"
            android:text="@string/btn_submit_branding"
            android:textAlignment="center"
            android:textColor="@color/main_olive"
            android:textSize="15sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/et_branding_description" />

        <ImageView
            android:id="@+id/iv_ai_designer_result"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="30dp"
            android:src="@drawable/ai_designer"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn_submit" />

        <TextView
            android:id="@+id/ai_designer_branding_result_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:fontFamily="@font/pretendardbold"
            android:gravity="start"
            android:text="@string/ai_designer_branding_result_title"
            android:textColor="@color/olive_black"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="@+id/iv_ai_designer_result"
            app:layout_constraintStart_toEndOf="@+id/iv_ai_designer_result"
            app:layout_constraintTop_toTopOf="@+id/iv_ai_designer_result" />

        <TextView
            android:id="@+id/ai_designer_branding_result"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15dp"
            android:layout_marginVertical="15dp"
            android:layout_marginStart="15dp"
            android:background="@drawable/projects_background_olive"
            android:fontFamily="@font/pretendardregular"
            android:gravity="start"
            android:padding="15dp"
            android:textColor="@color/olive_black"
            android:textSize="13sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ai_designer_branding_result_title"
            tools:text="@string/default_link" />

        <ImageView
            android:id="@+id/tv_copy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/pretendardregular"
            android:gravity="start"
            android:layout_marginHorizontal="10dp"
            android:src="@drawable/file_copy_24"
            android:layout_marginBottom="10dp"
            app:layout_constraintBottom_toBottomOf="@+id/ai_designer_branding_result_title"
            app:layout_constraintStart_toEndOf="@+id/ai_designer_branding_result_title"
            app:layout_constraintTop_toTopOf="@+id/ai_designer_branding_result_title" />

        <ProgressBar
            android:id="@+id/loading_progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ai_designer_branding_result_title" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>