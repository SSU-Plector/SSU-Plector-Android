<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_olive"
    tools:context=".LoginActivity">

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/vp_introduce"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="70dp"
        android:layout_marginBottom="15dp"
        app:layout_constraintBottom_toTopOf="@id/indicator_dots"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.tbuonomo.viewpagerdotsindicator.DotsIndicator
        android:id="@+id/indicator_dots"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="86dp"
        app:dotsColor="@color/main_olive"
        app:dotsCornerRadius="10dp"
        app:dotsSize="8dp"
        app:dotsSpacing="7dp"
        app:dotsWidthFactor="1"
        app:layout_constraintBottom_toTopOf="@+id/iv_kakao_login"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/vp_introduce"
        app:progressMode="true"
        app:selectedDotColor="@color/white" />

    <ImageView
        android:id="@+id/iv_kakao_login"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="50dp"
        android:src = "@drawable/kakao_login_medium_wide"
        android:textColor="@color/olive_black"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
