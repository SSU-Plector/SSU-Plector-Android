<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="20dp"
    android:layout_marginVertical="20dp"
    android:background="@color/white">

    <TextView
        android:id="@+id/tv_project_submit_developer_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/pretendardmedium"
        android:text="@string/tv_project_submit_developer_name"
        android:textColor="@color/olive_black"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/et_project_submit_developer_name"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/pretendardregular"
        android:gravity="center"
        android:paddingHorizontal="2dp"
        android:textColor="@color/olive_black"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_project_submit_developer_name" />

    <TextView
        android:id="@+id/tv_project_submit_developer_email"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/pretendardmedium"
        android:text="@string/tv_project_submit_developer_email"
        android:textColor="@color/olive_black"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_project_submit_developer_name" />

    <EditText
        android:id="@+id/et_project_submit_developer_email"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="100dp"
        android:fontFamily="@font/pretendardregular"
        android:gravity="start"
        android:hint="ssuplector@gmail.com"
        android:paddingHorizontal="2dp"
        android:textColor="@color/olive_black"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_project_submit_developer_email" />

    <TextView
        android:id="@+id/tv_submit_project_developer_category_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/pretendardmedium"
        android:text="@string/tv_submit_project_developer_category_title"
        android:textColor="@color/olive_black"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_project_submit_developer_email" />


    <TextView
        android:id="@+id/tv_submit_project_developer_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/dialog_button_background_main_olive"
        android:fontFamily="@font/pretendardmedium"
        android:gravity="center"
        android:padding="5dp"
        android:text="@string/tv_submit_project_category"
        android:textColor="@color/olive_black"
        android:textSize="10sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_submit_project_developer_category_title" />


    <TextView
        android:id="@+id/tv_project_submit_developer_leader"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/pretendardmedium"
        android:text="@string/tv_project_submit_developer_leader"
        android:textColor="@color/olive_black"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_submit_project_developer_category" />

    <CheckBox
        android:id="@+id/cb_project_submit_developer_leader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:buttonTint="@color/olive_gray"
        app:layout_constraintBottom_toBottomOf="@+id/tv_project_submit_developer_leader"
        app:layout_constraintStart_toEndOf="@+id/tv_project_submit_developer_leader"
        app:layout_constraintTop_toTopOf="@+id/tv_project_submit_developer_leader" />

    <TextView
        android:id="@+id/tv_confirm_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/button_bright_olive_radius6"
        android:gravity="center"
        android:text="@string/all_done"
        android:textAppearance="@font/pretendardblack"
        android:textColor="@color/olive_black"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cb_project_submit_developer_leader" />
</androidx.constraintlayout.widget.ConstraintLayout>